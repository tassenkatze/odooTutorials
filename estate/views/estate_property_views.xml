<?xml version="1.0"?>
<odoo>
<data>
    <record id="estate_model_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">kuchen</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">tree</field>
        <field name="model">kuchen</field>
        <field name="arch" type="xml">
            <tree string="Properties" decoration-success="state in ('offer_received', 'offer_accepted')" decoration-muted="state == 'sold'" decoration-bf="state == 'offer_accepted'">
                <field name="name"/>
                <field name="postcode"/>
                <field name="type_id"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="garden_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="buyer_id"/>
                <field name="availability_date" optional="hide"/>
                <field name="state" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.view.search</field>
        <field name="model">kuchen</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Name" />
                <field name="postcode" string="Postcode"/>
                <field name="bedrooms" string="Bedrooms"/>
                <filter name="Available" domain="['|', ('state', '=', 'new'), ('state', '=', 'offer_received')]"/>
                <filter string="Postcode" name="provider" context="{'group_by':'postcode', 'residual_visible':True}"/>
            </search>
        </field>
    </record>

    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">form</field>
        <field name="model">kuchen</field>
        <field name="arch" type="xml">
            <form string="Test">
                <sheet>
                    <group>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                            <field name="tag_ids" widget="many2many_tags"/>
                        </div>
                        <group>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description"/>
                            </group>
                            <group>
                                <field name="type_id"/>
                            </group>
                            <group>
                                <field name="postcode"/>
                            </group>
                            <group>
                                <field name="bedrooms"/>
                            </group>
                            <group>
                                <field name="living_area"/>
                            </group>
                            <group>
                                <field name="garden_area"/>
                            </group>
                            <group>
                                <field name="garden_orientation"/>
                            </group>
                        </page>
                        <page string="Sales information">
                            <group>
                                <field name="expected_price"/>
                            </group>
                            <group>
                                <field name="selling_price"/>
                            </group>
                            <group>
                                <field name="state"/>
                            </group>
                            <group>
                                <field name="availability_date"/>
                            </group>
                            <group>
                                <field name="buyer_id"/>
                            </group>
                            <group>
                                <field name="salesperson_id"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <group>
                                <field name="offer_ids"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    </data>
</odoo>